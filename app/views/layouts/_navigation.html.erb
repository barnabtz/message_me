<div class="item">
  <%= image_tag "logo.png" %>
</div>
<%= link_to "CHATROOMS", root_path, class: "active item" %>
<a href="" class="item">
  MESSAGES
</a>
<div class="right menu">
  <div class="ui dropdown item">
    ACCOUNT <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
      <% else %>
      <%= link_to "Signin", login_path, class: "item" %>
      <% end %>
    </div>
  </div>
  <% if !logged_in? %>
    <div class="item">
      <%= link_to "Login", login_path, class: "ui primary button" %>
    </div>
  <% end %>
</div>